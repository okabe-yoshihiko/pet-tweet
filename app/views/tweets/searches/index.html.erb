
<style>
.card-columns{
  max-width:800px;
  margin: 70px auto;
  
}

.likes{
  margin:5px;
  display:flex;
}
</style>


<%= form_with(url: tweets_searches_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>

<div class="card-columns">
 <% @tweets.each do |tweet| %>
<div class="card">
投稿者   <%= tweet.user.nickname%>
    <img src=<%= tweet.image %> class="card-img-top">
  <div class="more"> 
     <button type="button" class="arrow" data-toggle="dropdown" >
      <span><%= image_tag 'arrow_top.png' %></span>
     </button>
    <div class="dropdown-menu">
       <% if user_signed_in? && current_user.id == tweet.user_id %>
      <li>
        <%= link_to'削除', "/tweets/#{tweet.id}", method: :delete %>
      </li>      
      <li>
        <%= link_to'編集', "/tweets/#{tweet.id}/edit", method: :get %>
      </li>
      <%end%>
      <li>
        <%= link_to '詳細', "/tweets/#{tweet.id}", method: :get %>
      </li>
    </div>
      <div class="user_box">
       <% if user_signed_in?%>
     
          <div class="likes">
        <%= render 'likes/like', tweet: tweet %>
        <div class="like">
        いいね！
        </div>
          </div>
            <%end%>
      </div>
      <div class="card-body">
        <p class="card-text"><%= tweet.text%></p>
      </div>
  </div> 

</div>
<%end%>